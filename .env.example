# Environment Variables for PEG Security Backend
# Copy this file to .env.local and fill in your actual values

# ==========================================
# Supabase Configuration
# ==========================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==========================================
# Resend Email Configuration
# ==========================================
# Get these from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=onboarding@resend.dev
# After verifying domain, use: noreply@pegsecurity.co.za

# ==========================================
# Admin Authentication
# ==========================================
# Set a strong password for admin access
ADMIN_PASSWORD=change_this_to_strong_password

# JWT Secret for session encryption (generate a random string)
JWT_SECRET=change_this_to_random_32_char_string

# ==========================================
# App Configuration
# ==========================================
# Local development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Production (update after deploying to Vercel)
# NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app

# Environment (development, production)
NODE_ENV=development

# ==========================================
# Optional: WhatsApp Integration
# ==========================================
# WhatsApp number for click-to-chat (no API key needed)
NEXT_PUBLIC_WHATSAPP_NUMBER=27794139180
